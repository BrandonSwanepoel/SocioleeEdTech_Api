@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model RazorHtmlEmails.RazorClassLib.Views.Models.ResetPasswordRequest

@{
    ViewData["EmailTitle"] = "Change password";
}

<p align="center">
    Enter your new password.
</p>

<br />

<form asp-controller="Auth" asp-action="ChangePassword">
    <table>
        <tr>
            <td style="width: 130px;">
                <label style="margin-top: 4px; font-size: 14px; font:Helvetica, Sans-serif">Password:</label>
            </td>
            <td>
                <input class="input" data-val="true" data-val-required="The Password field is required." type="password" asp-for="Password" placeholder="Enter new password" style="width: 100%; min-width: 200px" />
                <br />
                <span style="color:red; font-size:12px" asp-validation-for="Password"></span>
            </td>
        </tr>
        <tr>
            <td></td>
        </tr>
        <tr>
            <td style="padding-top:20px;width: 130px;">
                <label style="margin-top: 4px; font-size: 14px; font:Helvetica, Sans-serif">Confirm Password:</label>
            </td>
            <td style="padding-top: 20px;">
                <input class="input" type="password" asp-for="ConfirmPassword" placeholder="Confirm new password" style="width: 100%; min-width:200px" />
                <br />
                <span style="color:red; font-size:12px" asp-validation-for="ConfirmPassword"></span>

            </td>

        </tr>
    </table>
    <div style="display: flex">
        <button class="btn" style="margin:auto; font-weight:500; border: none; font-size: 18px; font: Arial, Helvetica, Sans-serif; padding: 5px 10px; margin-top: 10px; border-radius: 10px; background-color: #7399cf; color: #fff; " type="submit">Change</button>
    </div>
</form>
<br />
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <style type="text/css">
            .img-container {
                background-image: url("https://socioleeblobstorage.blob.core.windows.net/images/logo.png");
                border: none;
                background-repeat: no-repeat;
                background-size: contain;
                background-position: center;
                outline: none;
                display: block;
                width: 100%;
                height: 100px;
            }
        </style>
    </head>
    <body style="font-family: Helvetica,Arial,sans-serif; margin: 0 !important; padding: 0 !important; background-color: white !important;">
        <div style="padding: 25px 10px 20px 10px;">
            <div class="img-container" alt="Logo"></div>
        </div>
        <div style="background-color: aliceblue; margin: 0px 10px 0px; border-radius: 10px;">
            <div  style="padding: 10px 15px 10px 15px; color: #444444; font-size: 18px; font-weight: 400; line-height: 1.1; ">
                @RenderBody()
            </div>
        </div>
        <div style="padding: 20px; max-width: 100%; font-weight: 400; line-height: 1.1; color: #7399cf; margin: 0; ">
            @if (ViewData["UnsubscribeUrl"] != null)
            {
                <div style="padding: 0px 30px 5px 30px; padding-top:20px; font-size: 12px;">
                    @ViewData["SubscriptionType"]
                </div>
                <div style="padding: 0px 30px 30px 30px; font-size: 12px; ">
                    <a href="@ViewData["UnsubscribeUrl"]" target="_blank" style="color: #7399cf; font-weight: 700; text-decoration: none ">unsubscribe</a>.
                </div>
            }
            <div style=" color:black; text-align:center; font-size:14px; font-weight:500">
                Powered by Sociolee
            </div>
            @*<div style="text-align:center; padding:0px 0px 30px 0px; font-size:10px;">
                Sociolee (PTY) LTD, PO Box Postnet Suite 0005, Private Bag X21 Tygervalley,
                Cape Town, Western Cape, 7536
            </div>*@
        </div>
    </body>
</html>